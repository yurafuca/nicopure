{
  "name": "にこぷれ（ニコニコ動画プレイヤー）",
  "short_name": "にこぷれ",
  "manifest_version": 2,
  "version": "0.0.1",
  "background": {
    "scripts": ["javascripts/background.js"]
  },
  "browser_action": {
    "default_icon": "image/icon.png",
    "default_title": "にこぷれ",
    "default_popup": "html/popup.html"
  },
  "description": "ニコニコ動画のバックグラウンドプレイヤ",
  "icons": {
    "16": "image/icon.png",
    "32": "image/icon.png",
    "64": "image/icon.png"
  },
  "permissions": [
    "tabs",
    "https://secure.nicovideo.jp/",
    "http://live.nicovideo.jp/",
    "http://api.ce.nicovideo.jp/",
    "http://www.nicovideo.jp/",
    "http://tn-skr3.smilevideo.jp/",
    "http://flapi.nicovideo.jp/",
    "http://*.nicovideo.jp/"
  ],
  "web_accessible_resources": ["image/icon.png"]
}
